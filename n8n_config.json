{
  "nodeType": "MCP Client",
  "serverName": "kaayaan-mcp-news",
  "description": "Kaayaan MCP News v2.1 - AI-powered cryptocurrency news sentiment analysis",
  "version": "2.1.0",
  "connection": {
    "type": "Command Line (STDIO)",
    "command": "docker exec -i kaayaan-mcp-news python3 /app/mcp_server.py",
    "environment": "production",
    "timeout": 30000,
    "restart_policy": "on_failure"
  },
  "capabilities": {
    "tools": [
      {
        "name": "crypto_news_analyze",
        "display_name": "Analyze Crypto News",
        "description": "Analyze single cryptocurrency news item for sentiment and market impact",
        "category": "AI Analysis",
        "parameters": {
          "title": {
            "type": "string",
            "required": true,
            "description": "News headline or title",
            "maxLength": 500
          },
          "summary": {
            "type": "string", 
            "required": true,
            "description": "News content or description",
            "maxLength": 2000
          },
          "source": {
            "type": "string",
            "required": false,
            "description": "News source (optional)",
            "maxLength": 100
          }
        },
        "output": {
          "impact": "string (Positive|Negative|Neutral)",
          "confidence": "number (0-100)",
          "affected_coins": "array of strings",
          "summary": "string",
          "lang": "string (en|ar)",
          "analysis_id": "string",
          "timestamp": "string (ISO 8601)"
        }
      },
      {
        "name": "crypto_news_batch_analyze", 
        "display_name": "Batch Analyze Crypto News",
        "description": "Analyze multiple cryptocurrency news items in batch for efficiency",
        "category": "AI Analysis",
        "parameters": {
          "news_items": {
            "type": "array",
            "required": true,
            "minItems": 1,
            "maxItems": 50,
            "description": "Array of news items to analyze",
            "items": {
              "title": "string (required)",
              "summary": "string (required)", 
              "source": "string (optional)"
            }
          }
        },
        "output": {
          "results": "array of analysis results",
          "total_items": "number",
          "request_id": "string",
          "timestamp": "string (ISO 8601)",
          "summary": "object with batch statistics"
        }
      },
      {
        "name": "crypto_market_sentiment",
        "display_name": "Market Sentiment Analysis",
        "description": "Get overall cryptocurrency market sentiment from recent news analysis",
        "category": "Market Intelligence",
        "parameters": {
          "timeframe": {
            "type": "string",
            "required": false,
            "enum": ["1h", "6h", "24h"],
            "default": "24h",
            "description": "Analysis timeframe"
          },
          "coins": {
            "type": "array",
            "required": false,
            "maxItems": 10,
            "description": "Specific coins to analyze (optional)",
            "items": "string"
          }
        },
        "output": {
          "timeframe": "string",
          "overall_sentiment": "string",
          "confidence": "number",
          "analyzed_items": "number",
          "sentiment_breakdown": "object",
          "top_coins_mentioned": "array"
        }
      },
      {
        "name": "crypto_impact_keywords",
        "display_name": "Extract Impact Keywords",
        "description": "Extract and analyze impact keywords from cryptocurrency text",
        "category": "Text Analysis",
        "parameters": {
          "text": {
            "type": "string",
            "required": true,
            "maxLength": 5000,
            "description": "Text to analyze for crypto impact keywords"
          },
          "include_weights": {
            "type": "boolean",
            "required": false,
            "default": false,
            "description": "Include keyword impact weights in response"
          }
        },
        "output": {
          "impact": "string",
          "confidence": "number", 
          "positive_keywords": "array",
          "negative_keywords": "array",
          "detected_coins": "array",
          "total_keywords": "number"
        }
      },
      {
        "name": "server_health_check",
        "display_name": "Server Health Check",
        "description": "Check server health and performance metrics",
        "category": "System Monitoring",
        "parameters": {},
        "output": {
          "server_name": "string",
          "version": "string",
          "status": "string",
          "timestamp": "string",
          "components": "object",
          "cache_stats": "object",
          "environment": "object"
        }
      }
    ]
  },
  "usage_examples": [
    {
      "name": "Single News Analysis",
      "tool": "crypto_news_analyze",
      "input": {
        "title": "Bitcoin surges 12% after ETF approval",
        "summary": "SEC approves first Bitcoin spot ETF, boosting investor confidence and driving price momentum.",
        "source": "CoinDesk"
      },
      "use_case": "Real-time news impact assessment"
    },
    {
      "name": "Batch News Processing",
      "tool": "crypto_news_batch_analyze", 
      "input": {
        "news_items": [
          {
            "title": "Ethereum network upgrade completed",
            "summary": "Latest Ethereum upgrade reduces gas fees significantly"
          },
          {
            "title": "Major exchange hack reported",
            "summary": "Security breach affects thousands of user accounts"
          }
        ]
      },
      "use_case": "Processing multiple news feeds efficiently"
    },
    {
      "name": "Market Sentiment Dashboard",
      "tool": "crypto_market_sentiment",
      "input": {
        "timeframe": "24h",
        "coins": ["BTC", "ETH", "ADA"]
      },
      "use_case": "Daily market sentiment overview"
    }
  ],
  "integration_notes": {
    "deployment": "Deploy using docker-compose.production.yml",
    "dependencies": ["Redis", "MongoDB", "OpenAI API key"],
    "security": "Use .env file for sensitive configuration",
    "monitoring": "Health checks available via server_health_check tool",
    "webhook_support": "Automatic notifications to configured webhooks",
    "timezone": "Asia/Kuwait (UTC+3)",
    "documentation": "See README.md and n8n_integration.md"
  }
}