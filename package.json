{
  "name": "mcp-news-v2.1",
  "version": "2.1.0",
  "description": "Universal MCP Server for real-time cryptocurrency market sentiment analysis",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "cryptocurrency",
    "sentiment-analysis",
    "news",
    "financial-analysis",
    "typescript",
    "express",
    "websocket",
    "sse"
  ],
  "author": "Kaayaan Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "ws": "^8.16.0",
    "zod": "^3.25.76",
    "pino": "^9.9.5",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "openai": "^5.20.2",
    "redis": "^5.8.2",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^5.0.3",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/node": "^24.3.3",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "globals": "^15.0.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "target": "node20",
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  }
}