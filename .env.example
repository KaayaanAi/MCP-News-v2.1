# Kaayaan MCP News v2.1 - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CRITICAL: NEVER COMMIT REAL CREDENTIALS TO GIT
# This is a safe template with placeholder values only
# =============================================================================

# Database Connections (Kaayaan Infrastructure)
MONGODB_URL=mongodb://username:password@mongodb:27017/database_name
REDIS_URL=redis://:password@redis:6379
POSTGRESQL_URL=postgresql://user:password@postgresql:5432/database_name

# WhatsApp Integration (Kaayaan WAHA API)
WHATSAPP_API=https://your-waha-domain.com
WHATSAPP_SESSION=your_session_id

# MCP Server Configuration
MCP_SERVER_NAME=kaayaan-mcp-news
LOG_LEVEL=INFO
TZ=Asia/Kuwait

# AI/LLM Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-n8n-domain.com/webhook/your-unique-id
WEBHOOK_SECRET=your_webhook_secret_key

# Security Configuration
API_TOKEN=your_secure_api_token_here

# Optional: CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://another-domain.com

# Optional: Rate Limiting
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_WINDOW=3600

